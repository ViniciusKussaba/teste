<p style="color: green"><%= notice %></p>

<h1>Exibindo paciente</h1>

<div class="mx-3">
  <div class="row">
    <div class="col">
      <strong>Nome:</strong> <%= @patient.name %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <strong>CPF:</strong> <%= @patient.cpf %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <strong>Data de nascimento:</strong> <%= format_date(@patient.birthdate) %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <strong>EndereÃ§o:</strong> <%= @patient.address_street %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <strong>Bairro:</strong> <%= @patient.address_neighborhood %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <strong>Cidade:</strong> <%= @patient.address_city %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <strong>Estado:</strong> <%= @patient.address_state %>
    </div>
  </div>

  <div class="d-flex flex-row gap-3 mt-3">
    <%= link_to patients_path, class: "btn btn-primary" do %>
      <%= fa_icon "angle-left" %>
      Voltar
    <% end %>
    <%= link_to edit_patient_path(@patient), class: "btn btn-warning" do %>
      <%= fa_icon "pencil" %>
      Editar paciente
    <% end %>
    <%= link_to patient_path(@patient), data: { "turbo_method": :delete, "turbo_confirm": "Deseja mesmo deletar o paciente?" }, class: "btn btn-danger" do %>
      <%= fa_icon "trash" %>
      Deletar paciente
    <% end %>
  </div>
</div>
